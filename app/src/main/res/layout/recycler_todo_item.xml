<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:weightSum="12"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_check_todo"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/selector_todo_check"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginStart="8dp"
            android:text="Todo1"
            android:textSize="14dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginStart="8dp"
            android:textSize="14dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_edit_todo"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginEnd="4dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_edit_todo"
            android:layout_gravity="center"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_edit_complete"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check_todo"
            android:layout_gravity="center"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_remove_todo"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/ic_remove_todo"
            android:layout_gravity="center"
            />


    </LinearLayout>
</LinearLayout>