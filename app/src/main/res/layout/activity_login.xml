<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="360px"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="800px"
        android:layout_height="800px"
        android:src="@drawable/dongwon_logo"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/txt_login"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:layout_marginBottom="40dp"
        android:text="Emotional diary that manages your emotions"
        android:textSize="16dp"
        android:textColor="#B7B7B7"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_google"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_google"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/login_google_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>